<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('icon.ejs') %>
        <title>CarMarket</title>

        <link href="/bs/css/bootstrap.min.css" rel="stylesheet">
        <script src="/bs/js/bootstrap.bundle.min.js"></script>

        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/footer.css">
        <link rel="stylesheet" href="/css/navbar.css">
        <link rel="stylesheet" href="/css/form.css">

        <script src="/js/passwordCheck.js"></script>
</head>

<body>
    <%- include('navbar.ejs') %>
        <div class="flex-wrapper">
            <form action="/user/edit" method="POST">
                <div class="row">
                    <div class="col-12 col-md-12">
                        <label for="make" class="form-label">Adatok módosítása</label><br>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <label for="surname" class="form-label">Vezetéknév:</label>
                    </div>
                    <div class="col-6 col-md-3">
                        <input type="text" value="<%=lastname%>" class="form-control" id="lastname"
                            placeholder="Vezetéknév" name="lastname" required>
                    </div>
                    <div class="col-6 col-md-3">
                        <label for="lastname" class="form-label">Keresztnév:</label>
                    </div>
                    <div class="col-6 col-md-3">
                        <input type="text" value="<%=firstname%>" class="form-control" id="lastname"
                            placeholder="Keresztnév" name="firstname" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <label for="email" class="form-label">Email cím:</label>
                    </div>
                    <div class="col-6 col-md-3">
                        <input type="email" class="form-control" value="<%=email%>" id="email" placeholder="Email cím"
                            name="email" required>
                        <small class="form-text">Nem osszuk meg az email címedet senkivel.</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <label for="username" class="form-label">Felhasználónév:</label>
                    </div>
                    <div class="col-6 col-md-3">
                        <input type="text" class="form-control" value="<%=usernameForm%>" id="username"
                            placeholder="Felhasználónév" name="username" required>
                    </div>

                </div>
                <div class="row">
                    <div class="col-6 col-md-5">
                        <label for="password" class="form-label">Jelszó:</label>
                    </div>
                    <div class="col-6 col-md-5">
                        <input type="password" value="" class="form-control" id="password" placeholder="Jelszó"
                            name="password" required>
                    </div>
                </div>
                <div class="row last-row">
                    <div class="col">
                        <button type="submit" class="btn btn-search">Módosítás</button>
                    </div>
                </div>
            </form>

            <%- include('footer.ejs') %>
        </div>
</body>

</html>